{% extends 'base.html.twig' %}
{% block content %}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-9 col-md-12">
            <h1>{{post.title}}</h1>
                <div class="my-3">
                    <smal class="text-muted">Por {{post.user.name}}, {{post.created_at | date ("d/m/Y" )}} Ã s {{post.created_at | date ("H:i" )}} em {{post.category.title}}</smal>
                </div>
                <div data-mdb-input-init class="form-outline mb-4">
                <a href="{{url('uploads/files/'~post.cover)}}" 
                    data-pswp-width="1669" 
                    data-pswp-height="2500" 
                    >
                    <img src="{{url('uploads/files/'~post.cover)}}" alt="{{post.title}}" title="{{post.title}}" class="coverAverage"/>
                </a>
                    
                    <textarea class="form-control autoResizeTextarea" id="autoResizeTextarea" rows="1">{{post.text | raw}}</textarea>
                    <label class="form-label" for="form6Example7"></label>
                </div>
        </div>
        <div class="col-lg-3">
            {% include'sidebar.html.twig '%}
        </div>
    </div>
</div>

{% endblock %}
