{% extends 'base.html.twig' %}
{% block content %}

    <div class="container my-5">
        <div class='row'>
            {% for post in posts %}
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                        <h5 class="card-title">
                                    {{ post.title }}
                                </h5>
                            <a href='{{url('post/'~post.id)}}'>
                                
                                <p class="card-text">
                                    {{summarizeText(post.text,150) }}
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}