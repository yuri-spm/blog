{% extends 'base.html.twig' %}
{% block content %}
    <div class="container my-5">
        <div class='row'>
            <div class="col-lg-9 col-md-12">
                <div class="row">
                    {% for post in posts %}
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card">
                                    <div class="card-body">
                                        <a href="{{url('post/'~post.id)}}" tooltip="tooltip title="{{post_title}}">
                                            <h4 class="card-title">
                                                {{ post.title }}
                                                <div class="d-flex justify-content-between my-3 text-muted">
                                                    <smal>{{post.category.title}}</smal>
                                                    <smal>00/00/0000</smal>
                                                </div>
                                            </h4>
                                            <p class="card-text">
                                                {{ summarizeText(post.text,150) }}
                                            </p>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-lg-3">
                {% include'sidebar.html.twig ' %}
            </div>
        </div>
    </div>
{% endblock %}