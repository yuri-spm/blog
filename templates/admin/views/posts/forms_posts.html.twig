{% extends "dashboard.html.twig" %}
{% block content %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ url('admin/dashboard') }}">
                    Home                           
                                    
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Posts                
                            
            </li>
        </ol>
    </nav>
    <div class="card border-1 shadow-sm">
        <div class="card-body">
            <form action="{{ url('admin/posts/register') }}" method="post">
                <div class="mb-3">
                    <label for="titulo" class="form-label">
                        TÃ­tulo             
                                                                    
                                            
                    </label>
                    <input type="text" class="form-control" id="titulo" name="titulo" value="{{ post.title }}"></div>
                    <div class="mb-3">
                        <label class="form-label"></label>
                        <textarea name='text' class="form-control" id="text" rows="5">
                            {{ post.text }}
                        </textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for='categoria_id' , class='form-label'>
                                    Categoria
                                                                                                        
                                                                    
                                </label>
                                <select class="form-select" name="categoria_id">
                                    {% for category in categories %}
                                        <option value="{{ category.id }}">
                                            {{ category.title }}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                            <div class="mb-3">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" name="status">
                                   <option value="1" {% if post.status == '1' %}selected{% endif %}>Ativo</option>
                        <option value="0" {% if post.status == '0' %}selected{% endif %}>Inativo</option>
                                </select>
                            </div>
                        </div>
                    </div>
        
                <input type="submit" class="btn btn-primary" value="{% if post.id %} Atualizar {% else %} Cadastrar{% endif %}">
                </form>
            </div>    
        </div>
        </div>
        {% endblock %}