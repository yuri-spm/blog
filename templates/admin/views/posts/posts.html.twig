{% extends "dashboard.html.twig" %}

{% block content %}  
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{url('admin/dashboard')}}">
                Home
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            Posts
        </li>
    </ol>
</nav>

{{ flash() }}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
        Total de posts {{total.total}} - Ativos {{total.ativo}} - Inativos {{total.inativo}} 
        <a href="{{url('admin/posts/register')}}" class="btn btn-primary">Cadastrar</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Título</th>
                        <th class="text-center">Status</th>
                        <th  class="text-center">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                    <tr>
                        <th>{{post.id}}</th>
                        <td>{{post.title}}</td>
                        <td class="text-center">
                            {% if post.status == 1 %}
                            <i class="fa-solid fa-circle text-success" tooltip="tooltip" title="Ativo"></i>
                            {% else %}
                            <i class="fa-solid fa-circle text-danger" tooltip="tooltip" title="Inativo"></i>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <a href="{{ url('admin/posts/edit/'~post.id)}}"><button type="button" class="btn btn-success">Editar</button></a>
                            <a href="{{ url('admin/posts/delete/'~post.id)}}"><button type="button" class="btn btn-danger">Excluir</button></a>
                        </td>
                    </tr>
                    {%endfor%}
                </tbody>
            </table>
        </div>     


    </div>
</div>
{% endblock %}