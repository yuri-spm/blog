{% extends "dashboard.html.twig" %}

{% block content %}  
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{url('admin/dashboard')}}">
                Home
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
           Categorias
        </li>
    </ol>
</nav>
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0">
        <a href="{{url('admin/categories/register')}}" class="btn btn-primary">Cadastrar</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Título</th>
                        <th class="text-center">Status</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                    <tr>
                        <th>{{category.id}}</th>
                        <td>{{category.title}}</td>
                        <td class="text-center">
                            {% if category.status == 1 %}
                            <i class="fa-solid fa-circle text-success" tooltip="tooltip" title="Ativo"></i>
                            {% else %}
                            <i class="fa-solid fa-circle text-danger" tooltip="tooltip" title="Inativo"></i>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <a href="{{ url('admin/categories/update/'~category.id)}}"><button type="button" class="btn btn-success">Editar</button></a>
                            <a href="{{ url('admin/categories/delete/'~category.id)}}"><button type="button" class="btn btn-danger">Excluir</button></a>
                        </td>
                    </tr>
                    {%endfor%}
                </tbody>
            </table>
        </div>     


    </div>
</div>
{% endblock %}